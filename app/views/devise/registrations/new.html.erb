 <%= render "diaries/header" %>

 <div class="text-lg  text-center pb-7 pt-7 bg-yellow-50">
    さあ、小さな日記をはじめよう
</div>



<%= form_with model: @user, url: user_registration_path, class: ' relative  flex flex-col pt-7 bg-yellow-50 ', local: true do |f| %>



 <div class="min-h-screen flex flex-col items-center justify-center bg-yellow-50">


  <div class="flex flex-col bg-yellow-200  shadow-md px-4 sm:px-6 md:px-8 lg:px-10 py-8 rounded-3xl w-50 max-w-md">

    <div class=" font-light self-center  text-3xl">
       新規登録
    </div>

      <%= render 'shared/error_messages', model: f.object %>

    <div class="flex flex-col pt-4">
      <label class="mb-1 text-xs tracking-wide text-gray-600">ニックネーム:</label>
     <%= f.text_field :nickname, class:"shadow appearance-none border rounded w-full py-2 px-3 bg-yellow-50 mt-1 leading-tight focus:outline-none focus:shadow-outline", id:"nickname", placeholder:"例) furima太郎", maxlength:"40" %>
  </div>
  <div class="flex flex-col pt-4">
      <label class="mb-1 text-xs tracking-wide text-gray-600">メールアドレス:</label>
     <%= f.email_field :email, class:"shadow appearance-none border rounded w-full py-2 px-3 bg-yellow-50 mt-1 leading-tight focus:outline-none focus:shadow-outline", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="flex flex-col pt-4">
      <label class="mb-1 text-xs tracking-wide text-gray-600">パスワード:</label>
      <%= f.password_field :password, class:"shadow appearance-none border rounded w-full py-2 px-3 bg-yellow-50 mt-1 leading-tight focus:outline-none focus:shadow-outline", id:"password", placeholder:"6文字以上の半角英数字" %>
     <p class='text-sm'>※英字と数字の両方を含めて設定してください</p>
  </div>
  <div class="flex flex-col pt-4">
      <label class="mb-1 text-xs tracking-wide text-gray-600">パスワード(確認):</label>
    <%= f.password_field :password_confirmation, class:"shadow appearance-none border rounded w-full py-2 px-3 bg-yellow-50 mt-1 leading-tight focus:outline-none focus:shadow-outline", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>

   <div class='flex w-full'>
     <%= f.submit "Create Account", class: 'flex mt-6 items-center justify-center focus:outline-none text-black text-sm  sm:text-base  bg-yellow-50  hover:bg-yellow-500 rounded-2xl py-2 w-full transition duration-150 ease-in  uppercase cursor-pointer'%>
    </div>

    <div class="pl-8 pt-12 pb-12 flex">
        既にアカウントをお持ち方は
        <div class =" underline decoration-rose-700">
        <%=link_to "こちら",user_session_path %>
        </div>
        から。
    </div>

   </div>
  </div>
<div class = " absolute bottom-0 left-5 w-48 bottom-10 bg-yellow-200 rounded-full">
 <%=image_tag "fan.png"%>
</div>
<div class="absolute  top-16 right-9 w-48 bg-yellow-200 rounded-full">
 <%=image_tag "umbrella.png"%>
 </div>
 <% end %>
