 <%= render "diaries/header" %>

  <div class=" pl-4 pb-2  sm:text-lg sm:pb-10 sm:pt-6 text-xs pb-10 pt-6  text-center bg-gray-50  ">
    ユーザー情報を編集しましょう
 </div>

     <%= form_with model: current_user, class: 'relative  flex flex-col pt-2 bg-gray-50',local: true do |f|%>
        <div class='min-h-screen flex flex-col items-center justify-center bg-gray-50 '>
          <div class="flex flex-col bg-gray-200 w-4/5 shadow-md px-4 sm:px-6 md:px-8 lg:px-10 py-8 rounded-xl w-50 max-w-md">
             <div class=" font-light self-center mb-8 text-3xl">
                Account Edit
             </div>
              <%= render 'shared/error_messages', model: f.object %>
                 <div class="flex flex-col pt-4">
                   <label class="mb-1 text-xs tracking-wide text-gray-600" >ニックネーム: </label>    
                   <%= f.text_field :nickname, class:"shadow appearance-none border rounded w-full py-2 px-3 bg-gray-50 mt-1 leading-tight focus:outline-none focus:shadow-outline", id:"nickname",placeholder:"例) 太郎", autofocus: true%>
                 </div>
                 <div class="flex flex-col pt-4">
                    <label class="mb-1 text-xs tracking-wide text-gray-600" >メールアドレス:</label>
                    <%= f.email_field :email,class:"shadow appearance-none border rounded w-full py-2 px-3 bg-gray-50 mt-1 leading-tight focus:outline-none focus:shadow-outline", id:"email", placeholder:"PC・携帯どちらでも可"%>
                 </div>
                <div class="flex flex-col pt-4">
                   <label class="mb-1 text-xs tracking-wide text-gray-600" for = "password">パスワード:</label>
                   <%= f.password_field :password, class:"shadow appearance-none border rounded w-full py-2 px-3 bg-gray-50 mt-1 leading-tight focus:outline-none focus:shadow-outline", id:"password", placeholder:"6文字以上の半角英数字" %>
                   <p class='text-xs pt-2 sm:text-sm'>※英字と数字の両方を含めて設定してください</p>
               </div>
               <div class="flex flex-col pt-4">
                  <label class="mb-1 text-xs tracking-wide text-gray-600" for ="password-confirmation">パスワード(確認):</label>
                  <%= f.password_field :password_confirmation, class:"shadow appearance-none border rounded w-full py-2 px-3 bg-gray-50 mt-1 leading-tight focus:outline-none focus:shadow-outline", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
               </div>
                  <div class='actions'>
                      <%= f.submit "更新する", class: 'flex mt-8 items-center justify-center focus:outline-none text-black text-sm  sm:text-base  bg-gray50  hover:bg-gray-500 rounded-2xl py-2 w-full transition duration-150 ease-in  uppercase cursor-pointer'%>
                  </div>
                  <div class ='bg-gray200'>
                   <%=link_to "戻る",root_path,class:'flex mt-8 items-center justify-center focus:outline-none text-black text-sm  sm:text-base  bg-gray200  hover:bg-gray-500 rounded-2xl py-2 w-full transition duration-150 ease-in  uppercase cursor-pointer'%>
                   </div>
           </div>
        </div>
    <% end %>
         <div class="h-16 grid grid-cols-3 gap-4 content-center text-center bg-gray-100 text-gray-500 ">
              <%=link_to '利用規約', terms_diaries_path%>
              <%=link_to'プライバシーポリシー' ,privacy_diaries_path%>
              <%= link_to "お問い合わせ" ,new_contact_path %>
        </div>
