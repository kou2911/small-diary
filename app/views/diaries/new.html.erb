 <%= render "header" %>

 <div class="lg:text-lg lg:pb-10 lg:pt-6 text-sm pb-10 pt-6  text-center bg-yellow-50 md:text-base ">
    今日の思い出を投稿しよう
 </div>


  <%= form_with model: @diary, url: diaries_path, class:" bg-yellow-50 h-screen w-screen ", local: true do |f| %>

 <div class="mx-auto max-w-6xl p-12 pt-10">
   <div class="flex flex-col md:flex-row ">
      <div class="md:w-1/2 max-w-md flex flex-col ">
         <div class="  text-center lg:text-4xl text-xl font-black uppercase lg:mt-10 md:mt-20">
         <%= @date%>
         </div>
         <div class="  text-center text-xl my-4 ">どんなに小さな思い出でも大丈夫。</div>
      <div class ="bg-yellow-200 rounded-full ">
       <%=image_tag "pc.png"%>
     </div>
  </div>


      <div class=" lg:w-1/2 flex  mr-8 mt-5 justify-end w-full md:mr-0 ">
         <div class="shadow-md flex-auto max-w-sm  p-10 pb-20 bg-yellow-200 -mb-8 rounded-lg ">
              <%= render 'shared/error_messages', model: f.object %>
            <div class="w-full">
               <div class="font-bold h-6 mb-1 mt-3 text-gray-600 text-base leading-8 uppercase"><span class="text-red-400 ">*</span> 思い出</div>
                <%= f.text_area :content, class:"p-1 px-2 appearance-none outline-none w-full text-gray-800", id:"diary-content", placeholder:"友達とばったりあった。", maxlength:"15" %>
                <span class="text-right text-sm text-gray-600", id="word-count">/15</span>
            </div>
            <div class="w-full">
               <div class="font-bold h-6 mb-1 mt-8 text-gray-600 text-base leading-8 uppercase"><span class="text-red-400 ">*</span> 場所</div>
                <%= f.text_area :place, class:"p-1 px-2 appearance-none outline-none w-full text-gray-800", id:"diary-place", placeholder:"いつものコンビニ", maxlength:"30" %> 
                <span class="text-right text-sm text-gray-600", id ="place-count">/30</span>
            </div>

            <div class="w-full">
               <div class="font-bold h-6 mb-1 mt-8 text-gray-600 text-base leading-8 uppercase"> 写真(任意)</div>
              <%= f.file_field :image, id:"diary-image" %>
            </div>


            <div class="mt-8 relative">
              <%= f.submit "投稿する", class: 'shadow-md font-medium py-4 px-4 text-gray-600
                  cursor-pointer bg-yellow-50 rounded text-lg tr-mt  absolute text-center w-full hover:bg-yellow-500'%>
            </div>
         </div>
      </div>
   </div>
</div>
 <% end %>



