 <%= render "diaries/header" %>


 <div class=" pl-4 pb-2  sm:text-lg sm:pb-10 sm:pt-6 text-sm pb-10 pt-6  text-center bg-yellow-50 ">
    お問い合わせフォーム
</div>


<%= form_with(model: @contact, local: true) do |f| %>
<% flash.each do |key, value| %>
      <p class = 'alert alert-<%= key %>'><%= value %></p>
    <% end %>
<div class="bg-yellow-50 py-6 sm:py-8 lg:py-12">
  <div class="max-w-screen-2xl px-4 md:px-8 mx-auto">
    <div class="mb-10 md:mb-16">
      <h2 class="text-gray-800 text-2xl lg:text-3xl font-bold text-center mb-4 md:mb-6">お問い合わせ</h2>

      <p class="max-w-screen-md text-gray-500 md:text-lg text-center mx-auto">このサービスのバグや、改善点、こんな機能が欲しい、どんな内容でも結構です!<br>あなたの声をお聞かせください。</p>
    </div>
    <div class="max-w-screen-md grid sm:grid-cols-2 gap-4 mx-auto">
         <%= render 'shared/error_messages', model: f.object %>


      <div class="sm:col-span-2">
        <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2",id:'genre_id'}) %>

      </div>

      <div class="sm:col-span-2 ">
        <%= f.text_area :memo, placeholder: "お問合せ内容を入力してください", class: "w-full h-44 sm:h-64 bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2",maxlength:"150" %>
      </div>

       <%= f.submit type: "submit", class:"inline-block bg-yellow-200 hover:bg-yellow-500 active:bg-indigo-700 focus-visible:ring ring-indigo-300 text-white text-sm md:text-base font-semibold text-center rounded-lg outline-none transition duration-100 px-8 py-3" do %> 
            送信 
        <% end %>

    </div>
  </div>
</div>

<% end %>

